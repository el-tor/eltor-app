{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "eltor",
  "version": "0.1.0",
  "identifier": "dev.eltor.app",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev:web",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "El Tor",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../../backend/bin/torrc.template",
      "../../backend/bin/torrc.relay.template",
      "../../backend/bin/phoenix-cli",
      "../../backend/bin/phoenixd",
      "../../backend/bin/IP2LOCATION-LITE-DB3.BIN"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}