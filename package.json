{
  "name": "eltor-app-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for eltor-app",
  "scripts": {
    "tauri": "cd frontend && pnpm run dev:tauri",
    "web": "concurrently \"pnpm run backend\" \"pnpm run frontend\"",
    "frontend": "cd frontend && pnpm run dev:web",
    "backend": "cd backend && ./run.sh",
    "build:web": "cd frontend && pnpm run build",

    "docker": "pnpm run build:web && DOCKER_BUILDKIT=1 docker-compose up --build",
    "docker:build": "DOCKER_BUILDKIT=1 docker build -t eltor/eltor-app:latest . --load",
    "docker:tag": "docker tag eltor/eltor-app:latest eltor/eltor-app:v0.0.9",
    "docker:push": "docker push eltor/eltor-app:latest",
    "docker:clean": "docker-compose up --build --no-cache"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
